<!DOCTYPE module PUBLIC
    "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
    "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">
<module name="Checker">

  <!-- 
    This Checkstyle configuration contains the set of warning severity checks
    contained in check-src-default.xml. It can be used in addition to
    check-src-default.xml as part of a separate pass in order to flag warnings
    as errors and trigger a build failure. This set of checks should only be
    used in very strict projects.
  -->

  <!--  As per Sun conventions -->
  <module name="Translation" />
  <module name="FileLength" />

  <module name="TreeWalker">
  
    <!-- Enable result caching -->
    <property name="cacheFile" value="${checkstyle.cache.file}" />

    <!--
    
        SIZE VIOLATIONS
    
    -->
        
    <!--  As per Sun conventions -->
    <module name="MethodLength" />
    <module name="ParameterNumber" />
        
    <!--
    
        CODING
    
    -->

    <!--  As per Sun conventions -->
    <module name="MissingSwitchDefault" />
    
    <!--
    
        CLASS DESIGN
    
    -->

    <!--  As per Sun conventions -->
    <module name="DesignForExtension" />
    
    <!--
    
        MISC
    
    -->
    
    <!--  As per Sun conventions -->
    <module name="FinalParameters" />

    <!--  Flag task tags as warnings -->
    <module name="TodoComment">
      <property name="format" value="TODO" />
    </module>
    <module name="TodoComment">
      <property name="format" value="FIXME" />
    </module>
    <module name="TodoComment">
      <property name="format" value="XXX" />
    </module>
    
  </module>
</module>
